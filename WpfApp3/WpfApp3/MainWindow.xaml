<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" Background="pink" Width="300">
            <TextBlock Text="Login" Width="200" Margin="0 10 0 0"/>
            <TextBox x:Name="txlogin" Width="200"/>
            <TextBlock Text="Password" Width="200"/>
            <PasswordBox x:Name="pxpass" Width="200"/>
            <Button Content="Dalee" Width="200" Click="click1" x:Name="btn1"/>
            <Button Content="Dalee" Width="200" Click="click2" x:Name="btn2" Margin="0 0 0 10" Visibility="Hidden"/>
        </StackPanel>
        <StackPanel x:Name="suckpan" VerticalAlignment="Bottom" Background="Pink" Width="300" Visibility="Hidden">
            <TextBlock x:Name="tbcapt" Width="200" Height="20" Background="White" Margin="0 10 0 10"/>
            <TextBox x:Name="txcapt" Width="200" Height="20"/>
            <Button Content="check" Width="200" Click="click3" Margin="0 5 0 5"/>
        </StackPanel>
    </Grid>
</Window>
